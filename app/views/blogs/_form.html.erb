<% if @blog.errors.any? %>
  <h2> The following errors:</h2>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end%>

<%=form_for @blog do |f| %>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
</p>
  <p>
    <%= link_to "Back to Articles" , blogs_path %> |
    <%= f.submit %>
  </p>
<% end %>
